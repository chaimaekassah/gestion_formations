<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.monprojetjavafx.monapp.controller.AddStudentController">
    <children>
        <Label text="Nouvel Étudiant">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtId" promptText="ID Étudiant" />
        <TextField fx:id="txtName" promptText="Nom Complet" />
        <TextField fx:id="txtMoyenne" promptText="Moyenne (0-20)" />
        <Button mnemonicParsing="false" onAction="#handleSave" text="Enregistrer" style="-fx-background-color: #2196F3; -fx-text-fill: white;" prefWidth="150.0" />
    </children>
</VBox>