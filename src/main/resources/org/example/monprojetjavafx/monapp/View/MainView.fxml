<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.monprojetjavafx.monapp.controller.MainController">
    <top>
        <VBox spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-padding: 20;">
            <children>
                <Label text="Gestion des Étudiants par Formation">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Choisir une formation :" />
                        <ComboBox fx:id="cbFormations" prefWidth="200.0" promptText="Sélectionner..." />
                        <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#handleOpenAddStudent" text="Ajouter Étudiant" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tableStudents" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="200.0" text="Nom Prénom" />
                <TableColumn fx:id="colMoyenne" prefWidth="100.0" text="Moyenne" />
                <TableColumn fx:id="colMoyenneFormation" prefWidth="150.0" text="Moyenne Formation" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
